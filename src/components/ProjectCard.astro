---
const { title, description, link, github, image } = Astro.props;
---

<div
  class="flex flex-col group h-[32rem] overflow-hidden rounded-3xl bg-dark-brown-bg p-4 gap-y-2"
>
  <h2 class="text-3xl">{title}</h2>
  <h3 class="text-xl text-dark-brown-text">
    {description}
  </h3>
  <div class="flex flex-row gap-x-4">
    {
      github && (
        <a
          href={github}
          target="_blank"
          rel="noopener noreferrer"
          class="text-dark-brown-text border-dark-brown-text size-fit rounded-full border text-xl py-2 px-4
  hover:text-dark-brown-bg hover:border-dark-brown-bg hover:bg-dark-brown-text"
        >
          Github
        </a>
      )
    }
    {
      link && (
        <a
          href={link}
          target="_blank"
          rel="noopener noreferrer"
          class="text-dark-brown-text border-dark-brown-text size-fit rounded-full border text-xl py-2 px-4
    hover:text-dark-brown-bg hover:border-dark-brown-bg hover:bg-dark-brown-text"
        >
          Visit â†’
        </a>
      )
    }
  </div>
  <img
    src={image}
    alt="Text2Math Screenshot"
    class="w-full h-full object-cover rounded-3xl"
  />
</div>
