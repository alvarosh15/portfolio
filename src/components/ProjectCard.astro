    <h2 class="text-2xl">{title}</h2>
    <h3 class="text-xl text-dark-brown-text">
      {description}
    </h3>
    <a
      href={link}
      target="_blank"
      rel="noopener noreferrer"
      class="text-dark-brown-text border-dark-brown-text size-fit rounded-full border text-xl py-2 px-4"
    >
      Visit â†’</a
    >
  </div>
  <img
    src={image}
    alt="Text2Math Screenshot"
    class="absolute top-30 left-32 scale-110 w-full h-full object-cover rounded-3xl transition-transform duration-300 ease-in-out group-hover:scale-125"
  />
</div>
